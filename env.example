# PMark3 AI Assistant 환경 설정

# API 설정
DEBUG=True
BACKEND_PORT=8010
FRONTEND_PORT=3010

# LLM 설정 (필수)
OPENAI_API_KEY=your_openai_api_key_here
LLM_PROVIDER=openai
OPENAI_MODEL=gpt-4o

# 데이터베이스 설정
DATABASE_URL=sqlite:///./data/notifications.db
SQLITE_DB_PATH=./data/notifications.db

# 파일 경로 설정
NOTIFICATION_HISTORY_FILE=./[Noti이력].xlsx
STATUS_CODE_FILE=./[현상코드].xlsx
EQUIPMENT_TYPE_FILE=./설비유형 자료_20250522.xlsx

# 벡터 DB 설정
VECTOR_DB_PATH=./data/vector_db
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# 추천 설정
MAX_RECOMMENDATIONS=15
MIN_RECOMMENDATIONS=1

# 에러 처리 설정
MAX_SQL_RETRY=5 